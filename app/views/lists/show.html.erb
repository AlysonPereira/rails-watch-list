<div class="container">
  <h2 class="text-white"><%= @list.name.capitalize %></h2>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="container">
      <p class="text-white">
        <strong>Title: </strong><%= bookmark.movie.title %>
      </p>
      <p class="text-white">
        <strong>Comment: </strong><%= bookmark.comment %>
      </p>
      <td><%= link_to 'Delete BookMark', bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'btn btn-danger btn-sm text-white ' %></td>
      <hr class="text-white">
    </div>
  <% end %>
  <%= link_to 'back', lists_path, class: "btn btn-sm btn-primary mt-3 text-white" %>
  <%= link_to 'Add BookMark', new_list_bookmark_path(@list), class: "btn btn-sm btn-warning mt-3 text-white" %>
</div>
